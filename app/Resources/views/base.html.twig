<!DOCTYPE html>
<html>
<head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-KLW75HR');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Skins4Real{% endblock %}</title>
    {% block stylesheets %}
        {% if app.environment == 'dev' %}
        <link rel="stylesheet" href="{{ asset('assets/build/css/style.css') }}">
        {% else %}
        <link rel="stylesheet" href="{{ asset('assets/build/css/style.min.css') }}">
        {% endif %}
    {% endblock %}
    <!-- <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" /> -->
    <link rel="icon" type="image/png" href="{{ asset('assets/build/img/favicon-32x32.png') }}" sizes="32x32">
</head>
<body class="first">
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KLW75HR"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
<header class="head">
    <div class="container">
        <div class="head__logo">{% include 'block/is_whitelabel_block.html.twig' %}</div>
        <div class="head__menu">
            <div class="head__faq" data-modal="true" data-modal-name="modal-faq">FAQ</div>
            <div>
                {% if deposit is defined %}<div class="head__depoId">{{ "deposit"|trans }}: {{ deposit.id }}</div>{% endif %}
                <div class="head__steam__circle"></div>
                <div class="head__steam head__steam__{{ app.request.locale }}" id="steamStatus" title="{{ "steam_ok"|trans }}"></div>
            </div>
            <div class="langSwitch">
                <span onclick="skins.changeLang('ru');" {% if app.request.locale == 'ru'%}class="langSwitch--disable"{% endif %}>ru</span>
                <span onclick="skins.changeLang('en');" {% if app.request.locale == 'en'%}class="langSwitch--disable"{% endif %}>en</span>
            </div>
        </div>
        <div class="head__spinner"></div>
    </div>
</header>
<!-- add this class in second pages - oneColl -->
{% block body %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/build/js/jquery.custom-scroll.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/build/js/jquery.cookie.min.js') }}"></script>
    <script>var locale = '{{ app.request.locale }}' ;</script>
    {% if app.environment == 'dev' %}
    <script type="text/javascript" src="{{ asset('assets/build/js/skins.js') }}"></script>
    {% else %}
    <script type="text/javascript" src="{{ asset('assets/build/js/skins.min.js') }}"></script>
    {% endif %}
{% endblock %}
</body>
</html>